{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["es2019", "dom"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "jsx": "react",
    "pretty": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist/types",
    "resolveJsonModule": true,
    "noImplicitThis": false,
    "baseUrl": "./src",
    "importHelpers": true
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "dist", "__tests__"]
}
