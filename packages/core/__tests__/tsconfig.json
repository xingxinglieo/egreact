{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "pretty": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist/types",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "noImplicitThis": false,
    "importHelpers": true
  },
  "include": ["src", "types", "__tests__"],
  "exclude": ["node_modules", "dist"]
}
