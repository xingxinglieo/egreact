{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "pretty": true,
    "skipLibCheck": true,
    "declaration": false,
    "removeComments": true,
    "sourceMap": true,
    "sourceRoot": "./",
    "resolveJsonModule": true,
    "noImplicitThis": false,
    "baseUrl": "./"
  },
  "include": [
    "packages/**/*",
    "node_modules/egret-engine/build"
  ]
}
